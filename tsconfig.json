{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015", "dom", "DOM.Iterable"]
  },
  "include": ["./src/**/*", "index.tsx"],
}
